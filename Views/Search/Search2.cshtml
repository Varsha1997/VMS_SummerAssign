@model IEnumerable<VMS_SummerAssign.Models.Opportunity>

@{
    ViewBag.Title = "Search2";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<html>
<head>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: center;
        }
    </style>
    <center><h3>Opportunity Information</h3></center>
</head>

<div class="w3-container">
    <center>
        <div class="w3-panel w3-border w3-round-small">
            <br />

            @using (Html.BeginForm("Search2", "Search", FormMethod.Get))
            {
                <b>Search Option: </b>@Html.RadioButton("option", "OName")<text> Name </text>@Html.RadioButton("option", "OActivity")<text> Activity </text>
                @Html.TextBox("search")<input type="submit" name="submit" value="Find" class="btn btn-default" />
            }
            <br />
        </div>
    </center>
</div>
    </head>
@{
    if (ViewBag.SearchKey != null)
    {
        <span>
            Search Key: @ViewBag.SearchKey
        </span>
    }
}

        <p>
            @Html.ActionLink("Go Back", "Index", "Opportunity")
        </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().OName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OCenter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OSeason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OActivity)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                Records Not Found
            </td>
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OCenter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OPhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OSeason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OActivity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
