@model IEnumerable<VMS_SummerAssign.Models.VolunteerModel>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<html>
<head>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: center;
        }
    </style>
    <center><h3>Volunteer Information</h3></center>
</head>


    <div class="w3-container">
        <center>
            <div class="w3-panel w3-border w3-round-small">
                <br />

                @using (Html.BeginForm("Search", "Search", FormMethod.Get))
                {
                    <b>Search Option: </b>@Html.RadioButton("option", "FName")<text> First Name </text>@Html.RadioButton("option", "LName")<text> Last Name </text>
                    @Html.TextBox("search")<input type="submit" name="submit" value="Find" class="btn btn-default" />
                }
                <br />
            </div>
        </center>
    </div>

    @{
        if (ViewBag.SearchKey != null)
        {
            <span>
                Search Key: @ViewBag.SearchKey
            </span>
        }
    }

    <p>
        @Html.ActionLink("Create New", "Add")
    </p>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolApprovStat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriversLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailabilityTimes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licenses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmergContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmergContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmergContactAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocialSecurity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolApprovStat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriversLicense)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Centers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Skills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailabilityTimes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Licenses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmergContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmergContactPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmergContactAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialSecurity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
